<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.rest.mapper.userMapper">

    <select id = "getUserById" resultType="com.example.rest.model.user">
        SELECT * FROM user WHERE id LIKE #{id};
    </select>

    <insert id="insertUser" useGeneratedKeys="true" keyProperty="idx" parameterType="com.example.rest.model.user">
        INSERT INTO user (id,passwd,salt,grade,email)
            VALUE (#{id}, #{passwd},#{salt},#{grade},#{email});

    </insert>

</mapper>